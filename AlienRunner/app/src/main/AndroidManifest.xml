<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.com.lixan.alienrunner">

    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation = "portrait">

        <activity android:name="me.com.lixan.alienrunner.menu.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="me.com.lixan.alienrunner.menu.TitleScreen" />
        <activity android:name="me.com.lixan.alienrunner.MainActivity" />

    </application>

</manifest>
